---
import BaseLayout from '../layouts/BaseLayout.astro';
import { SITE_TITLE } from '../consts';

// This would typically come from an API or CMS
const videos = [
  {
    id: 1,
    title: 'Latest Video Title',
    description: 'Check out my latest video where I share some exciting updates and fun moments!',
    thumbnail: '/videos/thumbnail1.jpg',
    url: 'https://youtube.com/watch?v=example1',
    date: '2024-04-20',
    views: '10K'
  },
  {
    id: 2,
    title: 'Funny Moments Compilation',
    description: 'A compilation of the funniest moments from my recent streams and videos.',
    thumbnail: '/videos/thumbnail2.jpg',
    url: 'https://youtube.com/watch?v=example2',
    date: '2024-04-15',
    views: '25K'
  },
  {
    id: 3,
    title: 'Behind the Scenes',
    description: 'Take a look behind the scenes of my content creation process.',
    thumbnail: '/videos/thumbnail3.jpg',
    url: 'https://youtube.com/watch?v=example3',
    date: '2024-04-10',
    views: '15K'
  }
];
---

<BaseLayout title="Videos" description="Watch the latest videos from Big Bussy">
  <main>
    <section class="hero">
      <div class="container">
        <h1>Latest Videos</h1>
        <p>Check out my latest content and don't forget to subscribe!</p>
      </div>
    </section>

    <section class="videos-section">
      <div class="container">
        <div class="videos-grid">
          {videos.map((video) => (
            <a
              href={video.url}
              target="_blank"
              rel="noopener noreferrer"
              class="video-card"
            >
              <div class="video-thumbnail">
                <img
                  src={video.thumbnail}
                  alt={video.title}
                />
                <div class="video-overlay">
                  <span class="views">
                    <i class="fas fa-eye"></i>
                    {video.views} views
                  </span>
                </div>
              </div>
              <div class="video-content">
                <h3>{video.title}</h3>
                <p>{video.description}</p>
                <div class="video-meta">
                  <span class="date">
                    <i class="far fa-calendar"></i>
                    {video.date}
                  </span>
                  <span class="watch-now">
                    Watch Now <i class="fas fa-arrow-right"></i>
                  </span>
                </div>
              </div>
            </a>
          ))}
        </div>

        <div class="subscribe-section">
          <a
            href="https://youtube.com/@2_dolla_heaux"
            target="_blank"
            rel="noopener noreferrer"
            class="subscribe-button"
          >
            <i class="fab fa-youtube"></i>
            Subscribe to My Channel
          </a>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  .videos-section {
    padding: 2rem 1rem;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .videos-grid {
    display: grid;
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .video-card {
    background: var(--color-bg);
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    text-decoration: none;
    color: var(--color-text);
  }

  .video-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 20px rgba(0, 0, 0, 0.15);
  }

  .video-thumbnail {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
  }

  .video-thumbnail img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .video-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
    padding: 1rem;
    color: white;
  }

  .video-content {
    padding: 1.5rem;
  }

  .video-content h3 {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
    color: var(--color-text);
  }

  .video-content p {
    color: var(--color-text);
    opacity: 0.8;
    margin-bottom: 1rem;
  }

  .video-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: var(--color-text);
    opacity: 0.8;
    font-size: 0.875rem;
  }

  .watch-now {
    color: var(--color-primary);
    font-weight: 500;
  }

  .subscribe-section {
    text-align: center;
    margin-top: 2rem;
  }

  .subscribe-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    background: var(--color-primary);
    color: white;
    padding: 1rem 2rem;
    border-radius: 0.5rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .subscribe-button:hover {
    background: var(--color-secondary);
    transform: translateY(-2px);
  }

  .subscribe-button i {
    font-size: 1.5rem;
  }

  @media (min-width: 768px) {
    .videos-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .videos-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style> 